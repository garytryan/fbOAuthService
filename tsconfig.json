{
    "compilerOptions": {
        "moduleResolution": "node",
        "types": ["node"],
        "alwaysStrict": true,
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDirs": ["./", "src/"],
        "outDir": "./bin",
        "baseUrl": ".",
        "paths": {
          "*": [
              "src/*",
              "*",
              "node_modules/*"
          ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
